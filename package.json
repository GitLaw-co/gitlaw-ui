{
  "name": "@gitlaw/ui",
  "version": "0.2.0",
  "description": "GitLaw UI Component Library - A design system for legal tech applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "ladle serve",
    "storybook": "ladle serve",
    "build": "vite build && npm run build:types",
    "build:types": "tsc --project tsconfig.build.json",
    "build-storybook": "node scripts/generate-changelog.cjs && ladle build",
    "changelog": "node scripts/generate-changelog.cjs",
    "deploy": "npm run build-storybook && gh-pages -d build",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@ladle/react": "^4.0.0",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.17",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "vite-plugin-dts": "^3.7.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "design-system",
    "tailwindcss",
    "legal",
    "gitlaw"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/GitLaw-co/gitlaw-ui.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
